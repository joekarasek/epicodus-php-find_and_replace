{% if form %}
  <form action='/action'>
    <div class="form-group">
      <label for='phrase'>Enter a phrase to search through:</label>
      <input name='phrase' id='phrase' type='text' class='form-control'>
    </div>
    <div class="form-group">
      <label for='word-to-replace'>Enter a word to replace in your phrase:</label>
      <input name='word-to-replace' id='word-to-replace' type='text' class='form-control'>
    </div>
    <div class="form-group">
      <label for='replacement'>Enter a replacement string:</label>
      <input name='replacement' id='replacement' type='text' class='form-control'>
    </div>
    <button type='submit' class='btn btn-success' name='button' value='whole'>Replace whole words</button>
    <button type='submit' class='btn btn-success' name='button' value='any'>Replace any matches</button>
  </form>
{% endif %}
